{
  "name": "quillwise",
  "version": "0.0.2",
  "description": "QuillWise - AI-powered writing assistant with translation, summarization, and text enhancement tools",
  "main": "dist/main/main.cjs",
  "homepage": "./",
  "type": "module",
  "author": {
    "name": "QuillWise",
    "email": "contact@quillwise.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "check": "npm run type-check && npm run lint",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "koffi": "^2.13.0",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "sonner": "^1.4.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.quillwise.app",
    "productName": "QuillWise",
    "copyright": "Copyright Â© 2024 QuillWise",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/main.cjs"
    },
    "extraFiles": [
      {
        "from": "LICENSE",
        "to": "LICENSE.txt"
      }
    ],
    "fileAssociations": [
      {
        "ext": "qw",
        "name": "QuillWise Document",
        "description": "QuillWise AI Document",
        "icon": "build/icon.png"
      }
    ],
    "protocols": [
      {
        "name": "quillwise",
        "schemes": [
          "quillwise"
        ],
        "role": "Editor"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "QuillWise"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "QuillWise - AI Writing Assistant",
      "runAfterFinish": true,
      "shortcutName": "QuillWise",
      "include": "build/installer.nsh",
      "license": "LICENSE",
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "installerLanguages": [
        "en",
        "tr",
        "fr",
        "de"
      ],
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "perMachine": false
    }
  },
  "keywords": [
    "ai",
    "writing",
    "assistant",
    "translation",
    "summarization",
    "text-enhancement",
    "electron",
    "react",
    "typescript",
    "productivity",
    "desktop",
    "quillwise"
  ]
}
